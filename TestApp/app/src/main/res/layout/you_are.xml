<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDarkBlue">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:elevation="16dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="0dp"
                android:src="@drawable/arrows_back_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:fontFamily="sans-serif"
                android:text="Your Are"
                android:textAllCaps="true" />

        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/second_background">

        <LinearLayout android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="name"
                android:textAllCaps="true"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="An Zang"
                android:textColor="@color/colorPureWhite"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/line_gradient" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="gender"
                android:textAllCaps="true"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />

            <TextView
                android:id="@+id/you_are_gender"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Male"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/line_gradient" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="location"
                android:textAllCaps="true"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />

            <TextView
                android:id="@+id/you_are_location"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Sanya Hainan China"
                android:textColor="@color/colorPureWhite"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/line_gradient" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="language"
                android:textAllCaps="true"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />

            <TextView
                android:id="@+id/you_are_language"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Standard"
                android:textColor="@color/colorPureWhite"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/line_gradient" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="religion"
                android:textAllCaps="true"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />

            <TextView
                android:id="@+id/you_are_religion"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Buddhist"
                android:textColor="@color/colorPureWhite"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/line_gradient" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="diet"
                android:textAllCaps="true"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />

            <TextView
                android:id="@+id/you_are_diet"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Regular"
                android:textColor="@color/colorPureWhite"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/line_gradient" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="residence"
                android:textAllCaps="true"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />

            <TextView
                android:id="@+id/you_are_residence"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Simple, One Room"
                android:textColor="@color/colorPureWhite"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/line_gradient" />
        </LinearLayout>

    </ScrollView>


</LinearLayout>